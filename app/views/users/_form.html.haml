= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :first_name
    = f.input :last_name
    = f.input :email
    = f.input :phone, :as => :string
    = f.input :role, :as => :select, :collection => human_roles if can? :change_role, @user
  = f.buttons do
    = f.commit_button
    %li.button
      = link_to t('formtastic.actions.cancel'), users_path
    
