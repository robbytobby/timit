= form_for @accessory do |f|
  -if @accessory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@accessory.errors.count, "error")} prohibited this accessory from being saved:"
      %ul
        - @accessory.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :option_id
    = f.number_field :option_id
  .field
    = f.label :quantity
    = f.number_field :quantity
  .actions
    = f.submit 'Save'
