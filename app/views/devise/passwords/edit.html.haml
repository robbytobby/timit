%h2= t('.change_your_password')
= semantic_form_for resource, :as => resource_name, :url => password_path(resource_name), :method => :put do |f|
  = devise_error_messages! 
  = f.hidden_field :reset_password_token
  = f.input :password, :label => t('.new_password')
  = f.input :password_confirmation, :label => t('.password_confirmation')
  = f.action :submit, label: :change_my_password
