%h2= t('.my_account')
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :phone, :as => :string
  = f.input :email
  = f.input :locale, :as => :select, :collection => [['deutsch', 'de'], ['english', 'en']]
  = f.input :default_machines
  = f.input :password, :hint => t('.leave_blank')
  = f.input :password_confirmation
  = f.input :current_password, :required => true, :hint => t('.needed_for_update')
  = f.commit_button :update_account
.clear
%h3= t('.cancel_my_account')
%p
  = t ('.unhappy?') 
  = link_to t(".cancel_my_account"), registration_path(resource_name), :confirm => t('are_you_sure?', :method => :delete)
= link_to t("back"), :back
